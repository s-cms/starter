{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite/core", "ultracite/react"],
  "linter": {
    "rules": {
      "style": {
        "noNamespace": "off"
      },
      "performance": {
        "noNamespaceImport": "off"
      }
    }
  },
  "files": {
    "includes": [
      "resources/js/**/*.ts",
      "resources/js/**/*.tsx",
      "!resources/js/components/ui"
    ]
  }
}
