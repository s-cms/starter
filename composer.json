{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "smart-cms/starter-kit",
    "type": "project",
    "description": "The starter kit for the Smart CMS application.",
    "keywords": [
        "smart-cms",
        "starter-kit",
        "laravel",
        "react",
        "inertia"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.3.0",
        "inertiajs/inertia-laravel": "^2.0.10",
        "laravel/fortify": "^1.31.3",
        "laravel/framework": "^12.38.0",
        "laravel/tinker": "^2.10.1",
        "laravel/wayfinder": "^0.1.12",
        "nunomaduro/essentials": "^1.0.1",
        "smart-cms/kit": "^1.0",
        "spatie/laravel-ray": "^1.41"
    },
    "require-dev": {
        "driftingly/rector-laravel": "^2.1.3",
        "fakerphp/faker": "^1.24.1",
        "larastan/larastan": "^3.8.0",
        "laravel/boost": "^1.8.0",
        "laravel/pail": "^1.2.3",
        "laravel/pint": "^1.25.1",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.2",
        "pestphp/pest": "^4.1.3",
        "pestphp/pest-plugin-browser": "^4.1.1",
        "pestphp/pest-plugin-laravel": "^4.0.0",
        "pestphp/pest-plugin-type-coverage": "^4.0.3",
        "rector/rector": "^2.2.8",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "setup": [
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "composer install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "@php artisan migrate --force --seed",
            "npm install",
            "npm run build",
            "@php artisan livewire:publish --assets"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan clear",
            "@update:requirements"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "update:requirements": [
            "composer bump",
            "npx npm-check-updates -u"
        ],
        "lint": [
            "rector",
            "pint --parallel",
            "npm run lint"
        ],
        "test:type-coverage": "pest --type-coverage --min=70",
        "test:lint": [
            "pint --parallel --test",
            "rector --dry-run",
            "npm run test:lint"
        ],
        "test:unit": "pest --parallel",
        "test:types": [
            "phpstan",
            "npm run test:types"
        ],
        "test": [
            "@test:type-coverage",
            "@test:unit",
            "@test:lint",
            "@test:types"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
